<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Legends of Alysteria</title>
    <link rel="icon" href="/LoA.png">
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cookie&family=Jim+Nightshade&display=swap" rel="stylesheet">
    <!-- STYLES -->
    <link rel="stylesheet" href="/styles/main.css">
    <%if(typeof theme != 'undefined'){%>
    <link rel="stylesheet" href=<%=`/styles/characters/${theme}.css`%>>
    <%}%>
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- SOCKET.IO -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.0/socket.io.js" integrity="sha512-+l9L4lMTFNy3dEglQpprf7jQBhQsQ3/WvOnjaN/+/L4i0jOstgScV0q2TjfvRF4V+ZePMDuZYIQtg5T4MKr+MQ==" crossorigin="anonymous"></script>
    <!-- SCRIPTS -->
    <script src="/scripts/states.js"></script>
    <script src="/scripts/main.js" defer></script>
</head>
<body>
    <nav>
        <section id="top" class="background-color">
            <section id="left">
                <i id="edit-title" class="fas fa-edit"></i>
                <section id="shadow-hide">
                    <p id="title">Legends of Alysteria</p>
                </section>
            </section>
            <section id="right">
                <section class="nav-buttons invisible" id="login-buttons">
                    <button class="nav-button login-button" id="login-button">
                        Log In
                    </button>
                    <button class="nav-button login-button" id="register-button">
                        Register
                    </button>
                </section>
            </section>
        </section>
        <section id="bottom">
            <section id="bottom-left">
                <section id="slide-bar">
                </section>
                <section id="nav-buttons" class="nav-buttons">
                    <button class="nav-button slide-button" id="story-button">
                        Current Info Sheets
                    </button>
                    <button class="nav-button slide-button" id="files-button">
                        Diary
                    </button>
                    <button class="nav-button slide-button" id="players-button">
                        Current Update
                    </button>
                    <button class="nav-button slide-button" id="characters-button">
                        Battle Simulator
                    </button>
                </section>
            </section>
        </section>
    </nav>
    <section id="character-page">
    </section>
    <section class="center-container" id="login">
    </section>
    <section class="center-container" id="register">
    </section>
</body>
<%- include('variableProcessor.ejs')%>
</html>