<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Legends of Alysteria</title>
    <link rel="icon" href="/LoA.png">
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&family=Jura&family=Noto+Sans+JP&family=Philosopher&family=Cookie&display=swap" rel="stylesheet">
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- SOCKET.IO -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.0/socket.io.js" integrity="sha512-+l9L4lMTFNy3dEglQpprf7jQBhQsQ3/WvOnjaN/+/L4i0jOstgScV0q2TjfvRF4V+ZePMDuZYIQtg5T4MKr+MQ==" crossorigin="anonymous"></script>
    <!-- SCRIPTS -->
    <script src="/scripts/story.js" defer></script>
</head>

<body id="background">
    <section id="top-section">
        <section id="tabs">
            <button class="tab <%if(!user.gamemaster){%>invisible-2<%}%>" id="player-tab">Player View</button>
            <button class="tab unselected <%if(!user.gamemaster){%>invisible-2<%}%>" id="gamemaster-tab">Gamemaster View</button> 
        </section>
    </section>
    <section id="main-story-section">
        <section id="left-arrow">
            <section class="arrow-box" id="left-arrow-box"><i class="fas fa-chevron-left"></i></section>
        </section>
        <section id="story">
            <section class="textbox" id="player-box">
                <section class="bottom" id="player-bottom-left">
                </section>
                <section class="bottom" id="player-bottom">
                </section>
                <section class="bottom" id="player-bottom-right">
                </section>
            </section>
            <section class="textbox invisible" id="gamemaster-box">
                <section class="bottom" id="gamemaster-bottom">
                </section>
            </section>
        </section>  
        <section id="right-arrow">
            <section class="arrow-box" id="right-arrow-box"><i class="fas fa-chevron-right"></i></section>
        </section>
    </section>
    <section id="top-arrow">
        <section class="arrow-box" id="top-arrow-box"><i class="fas fa-chevron-up"></i></section>
    </section>
    <section id="cutaway-image-collection" class="invisible">

    </section>

    <section id="cutaway-image-container">
        <section id="cutaway-image">

        </section>
    </section>
    <section id="choice-container">
        <section id="choice">

        </section>
    </section>
    <section id="cutaway-subtitle">
    </section>
    <%for(let x=0; x<story.songs.length; x++){%>
    <audio id='<%=story.songs[x].name%>' loop src='/audio/<%=story.songs[x].name%>.mp3'>
    </audio>
    <%}%>
</body>
<%console.log(story)%>
<script>
    let eventId = JSON.parse('<%-JSON.stringify(eventId)%>');
    let story =  JSON.parse('<%-JSON.stringify(story)%>');
    let phase = JSON.parse('<%-JSON.stringify(phase)%>');
</script>
</html>