<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Legends of Alysteria</title>
    <link rel="icon" href="/LoA.png">
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&family=Noto+Sans+JP&family=Philosopher&family=Cookie&display=swap" rel="stylesheet">
    <!-- STYLES -->
    <link rel="stylesheet" href="/styles/story.css">
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- SOCKET.IO -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.0/socket.io.js" integrity="sha512-+l9L4lMTFNy3dEglQpprf7jQBhQsQ3/WvOnjaN/+/L4i0jOstgScV0q2TjfvRF4V+ZePMDuZYIQtg5T4MKr+MQ==" crossorigin="anonymous"></script>
    <!-- SCRIPTS -->
    <script src="/scripts/story.js" defer></script>
</head>

<body>
    <section id="story">
        <section id="tabs">
            <%if(user.gamemaster){%>
                <button class="tab" id="player-tab">Player View</button>
                <button class="tab unselected" id="gamemaster-tab">Gamemaster View</button> 
            <%}%>
        </section>
        <section class="textbox" id="player-box">
            <section class="bottom" id="player-bottom">
            </section>
        </section>
        <section class="textbox invisible" id="gamemaster-box">
            <section class="bottom" id="gamemaster-bottom">
            </section>
        </section>
    </section>  
    <%for(let x=0; x<story.songs.length; x++){%>
    <audio id='<%=story.songs[x].name%>' loop>
        <source src='<%=story.songs[x].url%>'>
    </audio>
    <%}%>
</body>
<%console.log(story)%>
<script>
    let eventId = JSON.parse('<%-JSON.stringify(eventId)%>');
    let story =  JSON.parse('<%-JSON.stringify(story)%>');
</script>
</html>