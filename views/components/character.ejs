<animation>down</animation>
<section id ="character">
    <section id="character-navbar">
        <section id = "basic-sheet-button" class = "character-nav-button character-nav-button-unselected">
            Character Info
        </section> 
        <section id = "basic-combat-sheet-button" class = "character-nav-button character-nav-button-unselected <%if(combatSheet=="false"){%>invisible<%}%>">
            Combat Styles
        </section> 
        <section id = "fighting-styles-button" class = "character-nav-button character-nav-button-unselected <%if(combatSheet=="false"){%>invisible<%}%>">
            Fighting Styles
        </section> 
        <section id = "combat-training-button" class = "character-nav-button character-nav-button-unselected <%if(combatSheet=="false"){%>invisible<%}%>">
            Combat Training
        </section> 
        <section id = "spiritual-sheet-button" class = "character-nav-button character-nav-button-unselected <%if(spiritSheet=="false"){%>invisible<%}%>">
            Spirit Powers
        </section> 
        <section id = "spiritual-sheet-button" class = "character-nav-button character-nav-button-unselected <%if(heroSheet=="false"){%>invisible<%}%>">
            Hero
        </section> 
        <section id = "advanced-stat-sheet-button" class = "character-nav-button character-nav-button-unselected <%if(statSheet=="false"){%>invisible<%}%>">
            Advanced Stats
        </section> 
        <section id = "combat-styles-sheet-button" class = "character-nav-button character-nav-button-unselected <%if(combatSheet=="false"){%>invisible<%}%>">
            Advanced Combat Styles
        </section> 
    </section>
    <div id="sub-character-container-container">
        <div id="sub-character-container">
            <section id="sub-character">
                <div id='loading'>
                    <p id='loading-p' class='boxtext'><i class='fa-solid fa-spinner'></i></p>
                </div>
            </section>
        </div>
    </div>  
</section>
<script>
    if(states[0]=="main"){
        stateNum = 2
    }else{
        stateNum = 3
    }
    buttons.advancedStatClick = function(){
        $("#advanced-stat-sheet-button").on("click",function(){
            if(states[stateNum]!="advanced-stat-sheet"){
                states[stateNum] = "advanced-stat-sheet";
                loadState(stateNum);
            }
        })
    }
    buttons.basicClick = function(){
        $("#basic-sheet-button").on("click",function(){
            if(states[stateNum]!="basic-sheet"){
                states[stateNum] = "basic-sheet";
                loadState(stateNum);
            }
        })
    }
    buttons.basicCombatClick = function(){
        $("#basic-combat-sheet-button").on("click", function(){
            if(states[stateNum]!="basic-combat-sheet"){
                states[stateNum] = "basic-combat-sheet";
                loadState(stateNum);
            }
        })
    }
    buttons.combatStylesSheetClick = function(){
        $("#combat-styles-sheet-button").on("click", function(){
            if(states[stateNum]!="combat-styles-sheet"){
                states[stateNum] = "combat-styles-sheet";
                loadState(stateNum);
            }
        })
    }
    buttons.spiritSheetClick = function(){
        $("#spiritual-sheet-button").on("click", function(){
            if(states[stateNum]!="spirit-sheet"){
                states[stateNum] = "spirit-sheet";
                loadState(stateNum);
            }
        })
    }
    buttons.basicClick();
    buttons.advancedStatClick();
    buttons.basicCombatClick();
    buttons.combatStylesSheetClick();
    buttons.spiritSheetClick();
    characterColors = JSON.parse(`<%-JSON.stringify(characterinfo.colors)%>`)
    if(states[0]!="story"){
        loadMusic('<%=characterinfo.theme%>')
    }
    document.documentElement.style.setProperty('--light', characterColors.light);
    document.documentElement.style.setProperty('--dark', characterColors.dark);
    document.documentElement.style.setProperty('--darker', characterColors.darker);
    document.documentElement.style.setProperty('--highlight', characterColors.highlight);
    document.documentElement.style.setProperty('--background', characterColors.background);
</script>
