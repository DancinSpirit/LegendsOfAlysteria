<script>
    $("#story-button").on("click", async function(){
        if(states[1] != ["chapter-select"]){
            states = ["main","chapter-select"];
            data = [data[0],{name:"Story",id: player.story}];
            window.history.pushState({states:states,data:data}, "Chapter Select Page", `/main/chapter-select|Story=${player.story}`);
            deactivateButtons();
            await loadState(1);
            activateButtons();
        }
    })
    $("#battle-button").on("click", async function(){
            states = ["main","battle"];
            data = [data[0],{name:"Battle",id: "612c2f723a5b77bbf8f79f1e"}];
            window.history.pushState({states:states,data:data}, "Battler", `/main/battle>currentPlayer=${player.name}|Battle=${data[1].id}`);
            deactivateButtons();
            $("#sub-nav").css("display","none");
            await loadState(1);
            activateButtons();
    })
</script>
