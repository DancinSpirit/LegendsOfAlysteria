<section id="traits">
    <%if(traits.specialTraits.length){%>
        <section class="trait-section">
            <section class = "character-big-title character-box-section border-left-thick border-top-thick border-right-thick border-bottom-thick">
                Special Traits
            </section>
            <section class = "traits">
                <%for(let x=0; x<traits.specialTraits.length; x++){%>
                <section class = "trait">
                    <section class = "character-box-title character-box-section">
                        <%=traits.specialTraits[x].name%>
                    </section>
                    <section class = "character-box-content character-box-section">
                        <%=traits.specialTraits[x].description%>
                    </section>
                    <section class = "character-box-content character-box-section">
                        <b>Effect:</b> <%=traits.specialTraits[x].effect%>
                    </section>
                </section>
                <%}%>
            </section>
        </section>
        <%}%>
